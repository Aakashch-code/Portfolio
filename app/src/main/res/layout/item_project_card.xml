<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_background"
        android:padding="20dp">

        <!-- Project Image -->
        <ImageView
            android:id="@+id/projectImage"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/ic_project_placeholder"
            android:scaleType="centerCrop"
            android:clipToOutline="true"
            android:background="@drawable/rounded_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:animation="@anim/scale_in" />

        <!-- Status Indicator -->
        <View
            android:id="@+id/statusIndicator"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:background="@drawable/circle_green"
            android:elevation="8dp"
            app:layout_constraintEnd_toEndOf="@id/projectImage"
            app:layout_constraintBottom_toBottomOf="@id/projectImage"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp" />

        <!-- GitHub Button -->
        <ImageButton
            android:id="@+id/githubButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_github"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="?attr/colorAccent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Project Info Section -->
        <TextView
            android:id="@+id/projectName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Project Name"
            android:textColor="#1E90FF"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textAppearance="@font/roboto_bold"
            android:ellipsize="end"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/projectImage"
            app:layout_constraintEnd_toStartOf="@id/githubButton"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="12dp" />

        <TextView
            android:id="@+id/projectSubtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Active Project"
            android:textColor="#CBD5E1"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/projectName"
            app:layout_constraintStart_toStartOf="@id/projectName"
            app:layout_constraintEnd_toEndOf="@id/projectName"
            android:layout_marginTop="6dp" />

        <!-- Project Description -->
        <TextView
            android:id="@+id/projectDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="An innovative project that showcases modern Android development practices with beautiful UI and seamless user experience."
            android:textColor="#CBD5E1"
            android:textSize="14sp"
            android:lineSpacingExtra="3dp"
            android:maxLines="3"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/projectImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:paddingBottom="16dp" />

        <!-- Tech Stack -->
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/techBadges"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:chipSpacing="10dp"
            app:chipSpacingHorizontal="10dp"
            app:chipSpacingVertical="10dp"
            app:singleLine="false"
            app:chipStyle="@style/CustomChipStyle"
            app:layout_constraintTop_toBottomOf="@id/projectDescription"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kotlin"
                style="@style/CustomChipStyle"
                android:textSize="14sp" />

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Android"
                style="@style/CustomChipStyle"
                android:textSize="14sp" />

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Material Design"
                style="@style/CustomChipStyle"
                android:textSize="14sp" />

        </com.google.android.material.chip.ChipGroup>

        <!-- Progress Indicator -->
        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progressIndicator"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:visibility="gone"
            app:indicatorColor="?attr/colorPrimary"
            app:trackColor="?attr/colorPrimary"
            android:alpha="0.3"
            app:layout_constraintTop_toBottomOf="@id/techBadges"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>